pipeline {
  agent { label 'linux' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'npm install' // หรือ 'yarn install' ถ้าใช้ yarn
      }
    }
    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'sq1') {
          sh 'sonar-scanner -X -Dsonar.projectKey=my-project-key -Dsonar.sources=./src'
        }
      }
    }
  }
}
