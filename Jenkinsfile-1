pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        git 'https://github.com/aeff60/simple-express-app.git'
        bat 'npm install'
      }
    }

    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'sq1') {
          bat 'sonar-scanner -X -Dsonar.projectKey=my-project-key -Dsonar.sources=./src'
        }
      }
    }
  }
}
